<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:showIn="@layout/activity_create_bank_account"
        tools:context="com.mweser.affordabilitytracker.view.CreateBankAccountActivity">
    
    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:paddingTop="12dp"
              android:paddingStart="12dp"
              android:text="Enter data for new bank account:"
    />


    <RelativeLayout android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="25dp"
                    android:orientation="vertical"
    >
        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="match_parent"
                      android:layout_centerHorizontal="true"
                      android:layout_centerVertical="true"
                      android:orientation="vertical"
                      android:gravity="center"
                      android:layout_marginTop="12dp"
        >


            <EditText android:layout_width="@dimen/create_account_item_width"
                      android:layout_height="@dimen/create_account_item_height"
                      android:textSize="@dimen/create_account_text_size"
                      android:hint="Account name"
                      android:textColor="@color/colorHint"
                      android:layout_weight="1"
                      android:gravity="bottom"
                      android:textAlignment="center"
                      android:id="@+id/txtAccountName"
            />

            <EditText android:layout_width="@dimen/create_account_item_width"
                      android:layout_height="@dimen/create_account_item_height"
                      android:layout_weight="1"
                      android:textSize="@dimen/create_account_text_size"
                      android:hint="Total balance"
                      android:gravity="bottom"
                      android:textAlignment="center"
                      android:textColor="@color/colorHint"
                      android:id="@+id/txtTotalAmount"
            />

            <LinearLayout android:layout_width="match_parent"
                          android:layout_height="0dp"
                          android:orientation="horizontal"
                          android:gravity="center"
                          android:layout_marginTop="0dp"
                          android:layout_weight="1"
                          android:layout_marginBottom="0dp"
            >

                <ToggleButton android:layout_width="wrap_content"
                              android:layout_height="@dimen/create_account_item_height_taller"
                              android:id="@+id/toggleCreditCard"
                              android:textSize="@dimen/create_account_text_size"
                              android:textOff="CREDIT"
                              android:textOn="CREDIT"
                              android:layout_marginBottom="0dp"

                />

                <ToggleButton android:layout_width="wrap_content"
                              android:layout_height="@dimen/create_account_item_height_taller"
                              android:id="@+id/toggleDebitCard"
                              android:textSize="@dimen/create_account_text_size"
                              android:textOff="DEBIT"
                              android:textOn="DEBIT"
                              android:layout_marginBottom="0dp"

                />


            </LinearLayout>

            <EditText android:layout_width="@dimen/create_account_item_width"
                      android:layout_height="@dimen/create_account_item_height"
                      android:layout_weight="1"
                      android:textSize="@dimen/create_account_text_size"
                      android:hint="Statement date"
                      android:gravity="bottom"
                      android:textAlignment="center"
                      android:textColor="@color/colorHint"
                      android:id="@+id/txtStatementDate"
            />

            <EditText android:layout_width="@dimen/create_account_item_width"
                      android:layout_height="@dimen/create_account_item_height"
                      android:layout_weight=".75"
                      android:textSize="@dimen/create_account_text_size"
                      android:hint="Payment date"
                      android:gravity="bottom"
                      android:textAlignment="center"
                      android:textColor="@color/colorHint"
                      android:id="@+id/txtPaymentDate"
            />

            <EditText android:layout_width="@dimen/create_account_item_width"
                      android:layout_height="@dimen/create_account_item_height"
                      android:layout_weight="1"
                      android:textSize="@dimen/create_account_text_size"
                      android:hint="Amount due next statement"
                      android:gravity="bottom"
                      android:textAlignment="center"
                      android:textColor="@color/colorHint"
                      android:id="@+id/txtDueNextStatement"
            />



            <EditText android:layout_width="@dimen/create_account_item_width"
                      android:layout_height="@dimen/create_account_item_height"
                      android:layout_weight="1"
                      android:textSize="@dimen/create_account_text_size"
                      android:hint="Points Balance"
                      android:gravity="bottom"
                      android:textAlignment="center"
                      android:textColor="@color/colorHint"
                      android:id="@+id/txtPoints"
            />


        </LinearLayout>

    </RelativeLayout>

</android.support.constraint.ConstraintLayout>

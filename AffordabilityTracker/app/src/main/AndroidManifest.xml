<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.mweser.affordabilitytracker">

    <application
            android:allowBackup="true"
            android:icon="@mipmap/ic_launcher"
            android:label="@string/app_name"
            android:roundIcon="@mipmap/ic_launcher_round"
            android:supportsRtl="true"
            android:theme="@style/AppTheme">
        <activity
                android:name=".activities.MainActivity"
                android:label="@string/app_name"
                android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
                android:name=".activities.BankAccountActivity"
                android:label="@string/title_activity_bank_account_management"
                android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity
                android:name=".activities.ExpensesActivity"
                android:label="@string/title_activity_expenses"
                android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity
                android:name=".activities.ThresholdsActivity"
                android:label="@string/title_activity_thresholds"
                android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity
                android:name=".activities.WishlistActivity"
                android:label="@string/title_activity_wishlist"
                android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity
                android:name=".activities.ProjectionActivity"
                android:label="@string/title_activity_projection"
                android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity
                android:name=".activities.ProjectionListActivity"
                android:label="@string/title_activity_projection_list"
                android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity
                android:name=".activities.WishlistScheduleActivity"
                android:label="@string/title_activity_wishlist_schedule"
                android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity
                android:name=".activities.CreditPointsActivity"
                android:label="@string/title_activity_credit_points"
                android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity
                android:name=".activities.SettingsActivity"
                android:label="@string/title_activity_settings"
                android:theme="@style/AppTheme.NoActionBar">
        </activity>
    </application>

</manifest>
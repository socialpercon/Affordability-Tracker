<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:showIn="@layout/activity_create_expense_event"
        tools:context="com.mweser.affordabilitytracker.view.CreateExpenseEventActivity">


    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:paddingTop="12dp"
              android:paddingStart="2dp"
              android:text="Enter data for new recurring expense/income:"
    />

    <RelativeLayout android:layout_width="wrap_content"
                    android:layout_height="400dp"
                    android:paddingBottom="25dp"
                    android:orientation="vertical">

        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="match_parent"
                      android:layout_centerHorizontal="true"
                      android:layout_centerVertical="true"
                      android:orientation="vertical"
                      android:gravity="center"
                      android:layout_marginTop="62dp"
        >


            <EditText android:layout_width="@dimen/create_account_item_width"
                      android:layout_height="@dimen/create_account_item_height"
                      android:textSize="@dimen/create_account_text_size"
                      android:hint="Expense Name"
                      android:textColor="@color/colorHint"
                      android:layout_weight="1"
                      android:gravity="bottom"
                      android:textAlignment="center"
                      android:id="@+id/txtExpenseName"
            />

            <EditText android:layout_width="@dimen/create_account_item_width"
                      android:layout_height="@dimen/create_account_item_height"
                      android:layout_weight="1"
                      android:textSize="@dimen/create_account_text_size"
                      android:hint="Amount"
                      android:gravity="bottom"
                      android:textAlignment="center"
                      android:textColor="@color/colorHint"
                      android:id="@+id/txtAmount"
            />

            <LinearLayout android:layout_width="match_parent"
                          android:layout_height="0dp"
                          android:orientation="horizontal"
                          android:gravity="center"
                          android:layout_marginTop="0dp"
                          android:layout_weight="1"
                          android:layout_marginBottom="0dp"
            >

                <ToggleButton android:layout_width="wrap_content"
                              android:layout_height="@dimen/create_account_item_height_taller"
                              android:id="@+id/toggleExpense"
                              android:textSize="@dimen/create_account_text_size"
                              android:textOff="EXPENSE"
                              android:textOn="EXPENSE"
                              android:layout_marginBottom="0dp"

                />

                <ToggleButton android:layout_width="wrap_content"
                              android:layout_height="@dimen/create_account_item_height_taller"
                              android:id="@+id/toggleIncome"
                              android:textSize="@dimen/create_account_text_size"
                              android:textOff="INCOME"
                              android:textOn="INCOME"
                              android:layout_marginBottom="0dp"

                />


            </LinearLayout>

        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="@dimen/create_account_item_height"
                      android:orientation="horizontal"
                      android:gravity="center"
                      android:layout_weight="1"
        >
            <EditText android:layout_width="@dimen/create_account_item_width"
                      android:layout_height="wrap_content"
                      android:textSize="@dimen/create_account_text_size"
                      android:hint="Start date"
                      android:gravity="bottom"
                      android:textAlignment="center"
                      android:textColor="@color/colorHint"
                      android:id="@+id/txtStartDate"
            />

            <EditText android:layout_width="@dimen/create_account_item_width"
                      android:layout_height="wrap_content"
                      android:textSize="@dimen/create_account_text_size"
                      android:hint="End date"
                      android:gravity="bottom"
                      android:textAlignment="center"
                      android:textColor="@color/colorHint"
                      android:id="@+id/txtEndDate"
            />
            </LinearLayout>

        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="@dimen/create_account_item_height"
                      android:orientation="horizontal"
                      android:gravity="center"
                      android:layout_weight="1"
        >
            <EditText android:layout_width="50dp"
                      android:layout_height="wrap_content"
                      android:textSize="@dimen/create_account_text_size"
                      android:hint="Freq"
                      android:gravity="bottom"
                      android:textAlignment="center"
                      android:textColor="@color/colorHint"
                      android:id="@+id/txtFrequency"
            />


            <EditText android:layout_width="@dimen/create_account_item_width"
                      android:layout_height="wrap_content"
                      android:textSize="@dimen/create_account_text_size"
                      android:hint="Time Period"
                      android:gravity="bottom"
                      android:textAlignment="center"
                      android:textColor="@color/colorHint"
                      android:id="@+id/txtFreqType"
            />
            </LinearLayout>

            <EditText android:layout_width="@dimen/create_account_item_width"
                      android:layout_height="@dimen/create_account_item_height"
                      android:layout_weight="1"
                      android:textSize="@dimen/create_account_text_size"
                      android:hint="Account to charge"
                      android:gravity="bottom"
                      android:textAlignment="center"
                      android:textColor="@color/colorHint"
                      android:id="@+id/txtAccountName"
            />

        </LinearLayout>

    </RelativeLayout>

</android.support.constraint.ConstraintLayout>
